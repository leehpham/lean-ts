{
  "name": "lean-ts",
  "version": "0.1.0",
  "main": "./dist/main.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "npm run build -- --watch",
    "start": "npm run build && node ./dist/main.js",
    "start:watch": "ts-node-dev --no-notify --exit-child --respawn ./src/main.ts",
    "lint": "eslint",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "test:learning": "npm run test -- -c ./jest.config.learning.js",
    "test:learning:watch": "npm run test:learning -- --watch",
    "test:unit": "npm run test -- -c ./jest.config.unit.js",
    "test:unit:watch": "npm run test:unit -- --watch"
  },
  "author": "Hoang Pham",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@faker-js/faker": "^9.7.0",
    "@stylistic/eslint-plugin-js": "^4.2.0",
    "@stylistic/eslint-plugin-ts": "^4.2.0",
    "@types/eslint__js": "^8.42.3",
    "@types/lodash": "^4.17.16",
    "@types/node": "^22.14.1",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.30.1"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "reflect-metadata": "^0.2.2",
    "typedi": "^0.10.0"
  }
}
